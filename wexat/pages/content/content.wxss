/* pages/content/content.wxss */

 ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
} 

.page {
  height: 100%;
  position: absolute;
}


.page:before{
  content:' ';
  display:table;
}

.nav {
  /* position: fixed; */
  top: 0;
  height: 7vh;
  width: 100vw;
  margin: 0;
  border-bottom: darkblue 1px solid;
  z-index: 1;
  background-color: whitesmoke;
  /* display: flex; */
  line-height: 7vh;
}

.nav button {
  width: 33.3vw;
  height: inherit;
  line-height: inherit;
  font-size: 3vh;
  display: inline-block;
  margin: 0;
  text-align: center;
}

.messages {
  height: 92.9vh;
  width: 100vw;
  bottom: 0;
  margin-bottom: 0;
  position: relative;
   /* overflow-y: scroll;  */
  z-index: 0;
}

.mask {
  top: 7vh;
  height: 93vh;
  width: 100vw;
  position: fixed;
  background: rgba(0,0,0,0.5);
  z-index: 10;
}

.message-header {
  font-size: 15px;
  color: white;
  font-style: italic;
  margin-bottom: 15px;
}

.message-header text {
  margin-bottom: 10px;
}

.message-header button {
  height: 20px;
  width: auto;
  background-color: red;
  /* display: inline-block; */
  float: right;
  border-radius: 10px;
  box-shadow: -1px 1px black;
}


.message-grid {
  margin-left: 10vw;
  margin-right: 10vw;
  margin-top: 10vw;
  margin-bottom: 0;
  padding: 5vw;
  width: auto;
  height: auto;
  border-radius: 3vw;
  word-break: normal;
}

.grid-normal {
   background-color: silver;
}

.grid-mine {
  background-color: darkturquoise;
}

.message-comments {
  margin-left: 10vw;
  margin-right: 10vw;
  width: auto;
  height: auto;
  max-height: 55vh;
  min-height: 15vh;
  background-color: white;
  overflow-y: hidden;
  border: silver solid 1px;
  z-index: 0;
}

.comments-list {
  width: inherit;
  max-height: 50vh;
  min-height: 10vh;
  border-bottom: purple solid 1px;
  overflow-y: scroll;
}

.no-comment {
  text-align: center;
  margin: 0 auto;
  margin-top: 2vh;
}

.comment-grid {
  margin: 3vw;
  padding: 2vw;
  border-radius: 1vw;
  height: auto;
  width: auto;
  background-color: greenyellow;
  border: purple dotted 1px;
}

.new-comment {
  width: 20vw;
  height: 5vh;
  margin-left: 0 auto;
  margin-right: 0 auto;
  margin-bottom: 0;
  margin-top: 0;
  text-align: center;
  font-size: 2vh;
}

 .hide button {
  display: none;
}

.normal button {
  transition: 0.2s;
}

.normal view {
  transition: 0.2s;
} 

.normal {
  transition: 0.2s;
}

.hide view {
  /* min-height: 0;
  height: 0;
  transition: 0.2s; 
  visibility: hidden; */
  display: none;
}

.hide {
    min-height: 0;
    height: 0 !important;	
    transition: 0.2s;
    visibility: hidden;
}


.isLoadAll {
  width: 100vw;
  height:30px;
  font-size: 15px;
  margin-top: 10vw;
  text-align: center;
  line-height: 30px;
}

.nav-icon {
  margin: 0 auto;
  size: 100vw;
  justify-content: center;
}

.nav-content {
  line-height: 7vh;
}

#comment-text {
  text-align: left;
  padding: 2px;
  width: 80vw;
  margin: 5vw;
  background-color: wheat;
  height: 25vh;
}

#user-comment {
  text-align: center;
  position: absolute;
  top: 8vh;
  width: 90vw;
  height: auto;
  margin: 5vw;
  background-color: whitesmoke;
  border-radius: 1vh;
  opacity: 1;
  z-index: 20;
}

.comment-op {
  display: inline-block;
  height: 5vh;
  line-height: 5vh;
  width: 20vw;
  margin: 3vw;
  margin-top: 0;
  background-color: gainsboro;
}


#input-text {
  padding: 2px;
  margin: 5vw;
  background-color: white;
  height:50vw;
  width: auto;
}

#user-input {
  top: 7vh;
  position: fixed;
  height: 80vw;
  width: 100vw;
  background-color: skyblue;
  opacity: 1;
  z-index: 20;
}

#submit-input {
  margin-left: 70%;
  width: 20%;
}

#search-bar {
  display: inline-block;
  height: auto;
  width: 100vw;
  background-color: white;
}

#search-input {
  float: left;
  margin: 5vw;
  width: 70vw;
  height: 5vw;
  font-size: 4vw;
  border: blueviolet 1px solid;
}

#submit-search {
  float: left;
  width: auto;
  height: 7vw;
  line-height: 7vw;
  margin-top: 5vw;
  margin-bottom: 5vw;
  margin-right: 5vw;
}
